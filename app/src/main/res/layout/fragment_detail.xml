<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.gdgaracaju.sunshine.app.DetailActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <TextView android:id="@+id/text_detail"
        android:text="@string/generic_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_columnSpan="2" />

    <TextView android:id="@+id/day_detail"
        android:text="Tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_row="1"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

    <TextView android:id="@+id/date_detail"
        android:text="June 19"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

    <TextView android:id="@+id/max_temp_detail"
        android:text="18ยบ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal" />

    <TextView android:id="@+id/min_temp_detail"
        android:text="12ยบ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/darker_gray"/>

    <ImageView android:id="@+id/weather_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:src="@drawable/art_clear"
        android:contentDescription="@string/generic_placeholder"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <TextView android:id="@+id/weather_description_detail"
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <TextView android:id="@+id/humidity_detail"
        android:text="Humidity: 81%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView android:id="@+id/pressure_detail"
        android:text="Pressure: 1017 hPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_row="6"
        android:layout_column="0"/>

    <TextView android:id="@+id/wind_detail"
        android:text="Wind: 2 km/h NW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_row="7"/>


</GridLayout>
