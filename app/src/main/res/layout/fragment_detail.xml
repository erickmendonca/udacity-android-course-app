<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.gdgaracaju.sunshine.app.DetailActivity$PlaceholderFragment">

    <TextView android:id="@+id/text_detail"
        android:text="Placeholder for content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/day_detail"
        android:text="@string/day_activity_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detail"
        android:textSize="30sp"/>

    <TextView android:id="@+id/date_detail"
        android:text="@string/day_activity_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_detail"/>

    <TextView android:id="@+id/max_temp_detail"
        android:text="@string/day_activity_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_centerVertical="true"/>

    <TextView android:id="@+id/min_temp_detail"
        android:text="@string/day_activity_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_below="@+id/max_temp_detail"/>

    <ImageView android:id="@+id/weather_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"

        android:layout_centerVertical="true"/>

</RelativeLayout>
